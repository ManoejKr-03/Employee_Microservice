pipeline {
    agent any
    tools {
        maven 'my-maven'
        jdk 'my-java'
    }
    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/ManoejKr-03/Employee_Microservice.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                bat "mvn clean install -DskipTests"
            }
        }
        stage('Test') {
            steps {
                bat "mvn test"
            }
        }
        stage('Deploy') {
            steps {
                bat "docker build -t employee-image ."
                bat "docker run -p 8082:8082 -d --name employee-container employee-image"
            }
        }
    }
}
